<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play_podcast"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wilson.podcast_app.PlayPodcast">

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="134dp"
        android:id="@+id/seekBar"
        android:layout_alignStart="@+id/btnSkipB"
        android:layout_alignEnd="@+id/btnSkipF" />

    <ImageView
        android:layout_width="200dp"
        app:srcCompat="?android:attr/editTextBackground"
        android:id="@+id/imageView2"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="21dp"
        android:id="@+id/textView"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/seekBar"
        android:layout_toStartOf="@+id/seekBar"
        android:id="@+id/time_textview" />

    <Button
        android:text="Pause"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_alignBaseline="@+id/btnSrt"
        android:layout_alignBottom="@+id/btnSrt"
        android:layout_toEndOf="@+id/btnSkipB" />

    <Button
        android:text="15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSkipF"
        android:layout_marginStart="11dp"
        android:layout_alignTop="@+id/btnSrt"
        android:layout_toEndOf="@+id/btnSrt" />

    <Button
        android:text="Play"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnSrt"
        android:layout_marginStart="25dp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/time_textview"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:text="15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSkipB"
        android:layout_marginStart="32dp"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentStart="true" />
</RelativeLayout>
